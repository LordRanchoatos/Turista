<%- include ("../partials/header") %>

<div class="container">
    <div class="text-center">
        <h1 style="text-align: center;">Edit <%= center.name %></h1>
        <div style="width: 30%; margin: 0 auto;">
            <form action="/centers/<%= center._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="center[name]" value="<%= center.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="center[price]" value="<%= center.price %>" min="500" step="100">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="center[image]" value="<%= center.image %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="center[description]" value="<%= center.description %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-block btn-primary">Submit!</button>
                </div>
            </form>
            <a href="/centers/<%= center._id %>">Go Back</a>
        </div>

    </div>
</div>

<%- include ("../partials/footer") %>