<%- include ("../partials/header") %>

<div class="container">
    <div class="text-center">
        <h1 style="text-align: center;">Add New Comment to <%= center.name %></h1>
        <div style="width: 30%; margin: 0 auto;">
            <form action="/centers/<%= center._id %>/comments" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" placeholder="text">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-block btn-primary">Submit!</button>
                </div>
            </form>
            <a href="/centers">Go Back</a>
        </div>

    </div>
</div>

<%- include ("../partials/footer") %>